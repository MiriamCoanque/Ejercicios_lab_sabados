/*Crear una función que reciba como parámetro dos números enteros, que realice el promedio de los números y que retorne dicho valor.*/

#include <stdio.h>
#include <stdlib.h>

float promediarDosNumeros(int numeroA, int numeroB); //prototipo

int main(void)
{
	setbuf(stdout,NULL);

	int num1;
	int num2;
	float resultado;

	printf("ingrese un numero: ");
	scanf("%d", &num1);

	printf("ingrese otro numero: ");
	scanf("%d", &num2);

	resultado= promediarDosNumeros(num1,num2); //llamada
	printf("el promedio de los dos numeros ingresados es: %f", resultado);

	return EXIT_SUCCESS;
}

float promediarDosNumeros(int numeroA, int numeroB) //desarrollo
{
	float suma;
	float total


	suma= numeroA + numeroB;

	total= suma/2;


	return total;


}
