/*Crear una función que reciba como parámetro dos números enteros, que realice el promedio de los números y que retorne dicho valor.*/

#include <stdio.h>
#include <stdlib.h>

float promediarDosNumeros(int numeroA, int numeroB);

int main(void)
{
	setbuf(stdout,NULL);

	int resultado;
	int num1;
	int num2;

	printf("ingrese un numero: ");
	scanf("%d", &num1);

	printf("ingrese otro numero: ");
	scanf("%d", &num2);



	resultado= promediarDosNumeros(num1,num2);
	printf("el promedio de los dos numeros ingresados es: %d", resultado);

	return EXIT_SUCCESS;
}

float promediarDosNumeros(int numeroA, int numeroB)
{
	float promedio;


	scanf("%d", &numeroA);//a

	scanf("%d", &numeroB);

	promedio= (float)(numeroA + numeroB)/2;

	printf("el promedio da: ");
	scanf("%f", &promedio);



}
